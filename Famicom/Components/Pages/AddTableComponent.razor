﻿@if (!ManualAddition)
{
    //Automatic addition from api
    <MudPaper Class="pa-4">
        <MudForm>
            <MudSelect T="string" Label="Choose Table API"  ValueChanged="OnTableApiChanged" Class="mb-4">
                @foreach (var api in Apis)
                {
                    <MudSelectItem Value="@api.apiName">@api.apiName</MudSelectItem>
                }
            </MudSelect>

            @if(loading){
                <MudProgressCircular Color="Color.Default" Indeterminate="true" />
            }
            @if(selected)
            {
                <MudTable T="ITable" Items="tableinfo" Class="mb-4" Height="400px" MultiSelection="true" Hover="true" FixedHeader="true" @bind-SelectedItems="SelectedTables">
                    <HeaderContent>
                        <MudTh>Table Name</MudTh>
                        <MudTh>Manufacturer</MudTh>
                        <MudTh>GUID</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd>@context.Name</MudTd>
                        <MudTh>@context.Manufacturer</MudTh>
                        <MudTh>@context.GUID</MudTh>
                    </RowTemplate>
                </MudTable>
            }
            

            <MudStack Spacing="2" Class="mt-4">
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddManualy">Add Manualy</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddTable">Add</MudButton>
            </MudStack>
            <br />
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <p class="error-message">@ErrorMessage</p>
            }
        </MudForm>
    </MudPaper>
}
else
{   //Manual addition
    <MudPaper Class="pa-4">
        <MudForm>
            <MudTextField T="string" Label="Table GUID" Required="true" RequiredError="Table GUID is required!" @bind-Value="TableGuid" Class="mb-4" />
            <MudTextField T="string" Label="Table Name" Required="true" RequiredError="Table Name is required!" @bind-Value="TableName" Class="mb-4" />
            <MudTextField T="string" Label="Table Manufacturer" Required="true" RequiredError="Table Manufacturer is required!" @bind-Value="TableManufacturer" Class="mb-4" />
            <MudSelect T="int" Label="Choose Table API" @bind-Value="TableApi" Class="mb-4">
                @foreach (var api in Apis)
                {
                    <MudSelectItem Value="@api.apiID">@api.apiName</MudSelectItem>
                }
            </MudSelect>
            <MudStack Spacing="2" Class="mt-4">
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddManualy">Add From Api</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddTable">Add</MudButton>
            </MudStack>
            <br />
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <p class="error-message">@ErrorMessage</p>
            }
        </MudForm>
    </MudPaper>
}