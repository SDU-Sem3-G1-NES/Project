@inherits AddTableComponent

<MudCard>
    <MudCardContent>
        <MudTextField @bind-Value="TableGuid" Label="Table GUID" Variant="Variant.Filled" />
        <MudTextField @bind-Value="TableName" Label="Table Name" Variant="Variant.Filled" />
        <MudTextField @bind-Value="TableManufacturer" Label="Table Manufacturer" Variant="Variant.Filled" />
    </MudCardContent>
    <MudCardActions>
        <MudButton OnClick="AddTable" Color="Color.Primary" Variant="Variant.Filled">Add</MudButton>
    </MudCardActions>
</MudCard>

