@page "/cleaner"
@inject ISnackbar Snackbar
@inherits ComponentBase

<PageTitle>Cleaner Panel</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h1">Cleaner Panel</MudText>

    <!-- Cleaning Mode Toggle -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.subtitle1">
                Current Status: @("Cleaning Mode is " + (IsCleaningMode ? "ON" : "OFF"))
            </MudText>
            <MudButton Color="Color.Primary"
                       OnClick="@ToggleCleaningMode">
                @(IsCleaningMode ? "Deactivate Cleaning Mode" : "Activate Cleaning Mode")
            </MudButton>
        </MudCardContent>
    </MudCard>
</MudContainer>
