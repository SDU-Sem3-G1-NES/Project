@inherits ComponentBase
@using ApexCharts

<!--This will be daily graph-->
@if (DailyData != null && (DailyData[0] > 0 || DailyData[1] > 0) )
{
    <MudPaper Class="mb-4" Height="492px" Width="auto">
        <ApexChart TItem="TodayTime"
                   Title="Daily Siting and Standing time"
                   Options="options">

            <ApexPointSeries TItem="TodayTime"
                             Items="DailyTime"
                             SeriesType="SeriesType.Donut"
                             Name="Time spent"
                             XValue="e => e.Position"
                             YValue="e => (decimal)e.Time"
                             
                             />
        </ApexChart>
    </MudPaper>
}
else
{
    <MudPaper Class="mb-4" Height="492px" Width="auto">
        <MudPaper Class="mb-4" Height="492px" Width="auto">
            <MudText Typo="Typo.h6" Class="d-flex justify-center align-center">Daily Siting and Standing time</MudText>
            <br /><br /><br /><br /><br /><br /><br /><br />
            <MudText Typo="Typo.h6" Class="d-flex justify-center align-center" Style="align-items: center;">No data available</MudText>
        </MudPaper>
    </MudPaper>

}

@code {
    private ApexChartOptions<TodayTime> options { get; set; } = new()
        {
            Legend = new Legend
            {
                Position = LegendPosition.Bottom,
                FontSize = "15px",
                HorizontalAlign = ApexCharts.Align.Center
            }
        };

   
        
    
}