@page "/"
@inherits DashboardBase

<PageTitle>Dashboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <!-- Notifications Section -->
    <MudGrid>
        <MudItem xs="12">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">@NotificationsTitle</MudText>
                    <MudGrid>
                        @foreach (var notification in Notifications)
                        {
                            <MudItem xs="12" sm="4">
                                <MudCard Class="pa-2 mb-2">
                                    <MudText Typo="Typo.body1">@notification.Title</MudText>
                                    <MudText Typo="Typo.caption">@notification.Message</MudText>
                                    <MudButton Color="Color.Primary">
                                        @notification.Action
                                    </MudButton>
                                </MudCard>
                            </MudItem>
                        }
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Weekly and Today's Usage Graphs -->
    <MudGrid>
        <!-- Today's Usage Graph (left side) -->
        <MudItem xs="12" sm="6">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">@TodayUsageGraphTitle</MudText>
                    <MudChart ChartType="ChartType.Bar" ChartSeries="TodayUsageSeries"/>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- Weekly Usage Graph (right side) -->
        <MudItem xs="12" sm="6">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.h6">@WeeklyUsageGraphTitle</MudText>
                    <MudChart ChartType="ChartType.Bar" ChartSeries="@WeeklyUsageSeries"/> 
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12">
            <PresetComponent />
        </MudItem>

    </MudGrid>
</MudContainer>