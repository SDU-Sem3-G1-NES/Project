@inherits ComponentBase

<MudCard class="flex">
    <MudCardHeader>
        <MudText Typo="Typo.body1" Style="margin:auto "><b> Table Name:</b> @(Table?.Name ?? "Unknown Table Name")</MudText>
    </MudCardHeader>

    <MudCardContent Style="margin:auto" Class="gap-8">
        <MudText Typo="Typo.body2"><b>GUID:</b> @(Table?.GUID ?? "Unknown GUID")</MudText>
        <MudText Typo="Typo.caption"><b>Manufacturer:</b> @(Table?.Manufacturer ?? "Unknown Manufacturer")</MudText>
        <img src="@TableImageUrl" alt="Table image" />
    </MudCardContent>

    <MudCardActions Class="gap-5" Style="margin:auto ">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowUpward" OnClick="MoveTableUp" Color="Color.Success"> Raise Table</MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowDownward" Color="Color.Secondary" OnClick="MoveTableDown">Lower Table</MudButton>
    </MudCardActions>
</MudCard>
    

