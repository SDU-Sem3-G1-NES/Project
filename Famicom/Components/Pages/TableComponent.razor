@inherits ComponentBase

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.body1">Table Name: @(Table?.Name ?? "Unknown Table Name")</MudText>
    </MudCardHeader>

    <MudCardContent>
        <MudText Typo="Typo.body2">GUID: @(Table?.GUID ?? "Unknown GUID")</MudText>
        <MudText Typo="Typo.caption">Manufacturer: @(Table?.Manufacturer ?? "Unknown Manufacturer")</MudText>
        <img src="@TableImageUrl" alt="Table image" />
    </MudCardContent>

    <MudCardActions>
        <MudButton Color="Color.Primary" OnClick="MoveTableDown">Move Table Down</MudButton>
        <MudButton Color="Color.Secondary" OnClick="MoveTableUp">Move Table Up</MudButton>
    </MudCardActions>
</MudCard>
    

