@page "/health"
@inherits HealthBase

<PageTitle>Health Panel</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h1">Health Panel</MudText>

    <!-- Posture Guidance -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Optimal Posture Guidance</MudText>
            <img src="https://www.csueastbay.edu/riskmanagement/files/images/2021-ergonomic-graphic-01.jpg" alt="Optimal Posture" style="width: 100%; max-height: 400px;" />
            <MudText Typo="Typo.body1">
                Adjust your workspace according to the postures shown in the image, then input your desk height presets below.
            </MudText>
        </MudCardContent>
    </MudCard>

    <!-- Desk Height Presets -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Desk Height Presets</MudText>
            <MudTextField Label="Sitting Desk Height (cm)" @bind-Value="HealthModel.SittingHeightPreset" />
            <MudTextField Label="Standing Desk Height (cm)" @bind-Value="HealthModel.StandingHeightPreset" />
            <MudButton Color="Color.Primary" OnClick="SavePresets">Save Presets</MudButton>
        </MudCardContent>
    </MudCard>

    <!-- Mode and Notifications -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Mode Detection</MudText>
            <MudText Typo="Typo.subtitle1">Current Mode: @CurrentMode</MudText>
            <MudText Typo="Typo.subtitle1">Notification: @SittingNotification</MudText>
            <MudText Typo="Typo.subtitle2">Elapsed Sitting Time: @ElapsedTime.ToString("hh\\:mm\\:ss")</MudText>
        </MudCardContent>
    </MudCard>
</MudContainer>
