@page "/health"
@inherits HealthBase

<PageTitle>Health Panel</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h1">Health Panel</MudText>

    <!-- Sitting Duration -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Current Sitting Duration</MudText>
            <MudText Typo="Typo.subtitle1">@SittingDuration</MudText>
            <MudButton Color="Color.Primary" OnClick="StartSittingTimer">Start Timer</MudButton>
            <MudButton Color="Color.Secondary" OnClick="StopSittingTimer" Disabled="@(!TimerRunning)">Stop Timer</MudButton>
        </MudCardContent>
    </MudCard>

    <!-- Posture Check -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Posture Check</MudText>
            <MudText Typo="Typo.body1">Check if you're sitting correctly!</MudText>
            <MudButton Color="Color.Primary" OnClick="PerformPostureCheck">Check Posture</MudButton>
            <MudText Typo="Typo.caption">@PostureCheckResult</MudText>
        </MudCardContent>
    </MudCard>

    <!-- Break Reminders -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Break Reminders</MudText>
            <MudText Typo="Typo.body1">Set reminders to take breaks during work.</MudText>
            <MudTextField @bind-Value="BreakInterval" Label="Interval (minutes)" Variant="Variant.Filled" Type="number" />
            <MudButton Color="Color.Primary" OnClick="SetBreakReminder">Set Reminder</MudButton>
            <MudText Typo="Typo.caption">@ReminderMessage</MudText>
        </MudCardContent>
    </MudCard>
</MudContainer>
