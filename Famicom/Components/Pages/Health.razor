@page "/health"
@inherits HealthBase

<PageTitle>Health Panel</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    <MudText Typo="Typo.h1">Health Panel</MudText>

    <!-- Health Data Display -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Health Data</MudText>
            <MudText Typo="Typo.subtitle1">@HealthData</MudText>
            <MudTextField Label="Enter Your Height (cm)" @bind-Value="HealthModel.UserHeightInCm" />
            <MudButton Color="Color.Primary" OnClick="FetchHealthDataAsync">Fetch Health Data</MudButton>
        </MudCardContent>
    </MudCard>

    <!-- Sitting Timer -->
    <MudCard Class="mt-4">
        <MudCardContent>
            <MudText Typo="Typo.h6">Sitting Timer</MudText>
            <MudText Typo="Typo.subtitle1">Notification: @SittingNotification</MudText>
            <MudText Typo="Typo.subtitle2">Elapsed Time: @ElapsedTime.ToString("hh\\:mm\\:ss")</MudText>
            <MudButton Color="Color.Success" OnClick="StartSittingTimer" Disabled="IsTimerRunning">Start Timer</MudButton>
            <MudButton Color="Color.Error" OnClick="StopSittingTimer" Disabled="!IsTimerRunning">Stop Timer</MudButton>
            <MudButton Color="Color.Secondary" OnClick="ResetSittingTimer">Reset Timer</MudButton>
        </MudCardContent>
    </MudCard>
</MudContainer>
